{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "SqlConnection": "${POSTGRES_CONNECTION_STRING}",
    "AzureBlobStorage": "${BLOB_STORAGE_CONNECTION_STRING}"
  },

  "Jwt": {
    "Key": "${JWT_KEY}",
    "LifeTimeInMinutes": "${JWT_LIFE_TIME_IN_MINUTES}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}"
  },

  "RabbitMq": {
    "HostName": "${RABBIT_MQ_HOSTNAME}",
    "UserName": "${RABBIT_MQ_USERNAME}",
    "Password": "${RABBIT_MQ_PASSWORD}"
  },

  "SmtpOptions": {
    "Port": "${EMAIL_PORT}",
    "Server": "${EMAIL_SERVER}",
    "User": "${EMAIL_USER}",
    "Email": "${EMAIL_EMAIL}",
    "Name": "${EMAIL_NAME}",
    "Password": "${EMAIL_PASSWORD}"
  },

    "Redirect": {
      "Scheme": "${REDIRECT_SCHEME}",
      "Host": "${REDIRECT_HOST}",
      "Path": "${REDIRECT_PATH}"
  },

  "BlobStorage": {
    "ContainerName": "${BLOB_STORAGE_CONTAINER_NAME}",
    "Directory": "${BLOB_STORAGE_DIRECTORY}"
  }
}
